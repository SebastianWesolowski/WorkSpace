# --- Aliases ---
alias brewup='brew update; brew upgrade; brew cask upgrade; brew cleanup; brew doctor'
alias c="clear"
alias gitrm="rm -rf .git"
alias rm_modules="find . -name "node_modules" -type d -prune -exec rm -rf '{}' +"

# --- Config ---

alias git-config="git config --global -e"

# --- Applications ---

alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias p-serve="python3 -m http.server 3000"
alias p-serve-o="python3 -m http.server 3000 && open http://localhost:3000"
alias subl="/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl"
# --- Slask ---

# Shortcuts navigation
alias ..="cd .."
alias ....="cd ../.."

# --- Directory ---
alias w="cd ~/web"
alias d="cd ~/Desktop"
alias o="cd ~/organization"

# --- Git ----
alias gc="git commit --allow-empty-message -m '' --no-edit"

# --- dev ---
alias s="yarn run start:dev"
